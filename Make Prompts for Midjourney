    <script>
        const selections = {
            style: [],
            object: [],
            'arch-style': [],
            architect: [],
            facade: [],
            view: [],
            environment: [],
            lighting: [],
            params: []
        };

        function toggleSelection(btn, category) {
            const text = btn.textContent;
            const index = selections[category].indexOf(text);
            
            if (index > -1) {
                selections[category].splice(index, 1);
                btn.classList.remove('selected');
            } else {
                selections[category].push(text);
                btn.classList.add('selected');
            }
        }

        function clearSection(category) {
            selections[category] = [];
            const buttons = document.querySelectorAll(`#${category}-buttons .btn`);
            buttons.forEach(btn => btn.classList.remove('selected'));
            document.getElementById(`${category}-custom`).value = '';
        }

        function generatePrompt() {
            let prompt = [];

            // –°–æ–±–∏—Ä–∞–µ–º –≤—Å–µ –≤—ã–±—Ä–∞–Ω–Ω—ã–µ –ø–∞—Ä–∞–º–µ—Ç—Ä—ã
            Object.keys(selections).forEach(category => {
                const customInput = document.getElementById(`${category}-custom`).value.trim();
                const allItems = [...selections[category]];
                
                if (customInput) {
                    allItems.push(customInput);
                }

                if (allItems.length > 0) {
                    prompt.push(allItems.join(', '));
                }
            });

            if (prompt.length === 0) {
                alert('–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –≤—ã–±–µ—Ä–∏—Ç–µ —Ö–æ—Ç—è –±—ã –æ–¥–∏–Ω –ø–∞—Ä–∞–º–µ—Ç—Ä!');
                return;
            }

            const finalPrompt = prompt.join(', ');
            document.getElementById('prompt-output').textContent = finalPrompt;
            document.getElementById('modal').style.display = 'flex';
        }

        function closeModal() {
            document.getElementById('modal').style.display = 'none';
        }

        function copyPrompt() {
            const promptText = document.getElementById('prompt-output').textContent;
            navigator.clipboard.writeText(promptText).then(() => {
                alert('–ü—Ä–æ–º–ø—Ç —Å–∫–æ–ø–∏—Ä–æ–≤–∞–Ω –≤ –±—É—Ñ–µ—Ä –æ–±–º–µ–Ω–∞!');
            });
        }

        // –ó–∞–∫—Ä—ã—Ç–∏–µ –º–æ–¥–∞–ª—å–Ω–æ–≥–æ –æ–∫–Ω–∞ –ø—Ä–∏ –∫–ª–∏–∫–µ –≤–Ω–µ –µ–≥–æ
        window.onclick = function(e) {
            const modal = document.getElementById('modal');
            if (e.target === modal) {
                closeModal();
            }
        }
    </script>
</body>
</html>
